{
    "manifest_version" : 2,
    "name" : "一次性訊息範例",
    "description" : "",
    "version" : "2.0",
    "browser_action": {
        "default_title": "羅拉拉的一次性訊息範例",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },    
    "background" : {
        "scripts" : ["event.js"],
        "persistent" : false
    },
	"content_scripts" : [
		{
			"matches" : ["*://*/*"],
			"js" : ["content.js"]
		}
	],    
    "permissions" : ["tabs"]
}